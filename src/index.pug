extends markups/layout
include markups/header
block main
  +header('header', 'Creating a World of', 'THREE ZEROS' )
  //- regsitration{{{
  section#registration
    article.faded_out
      h2.moved_down(style="--order: 1") Create a Club
      p.moved_down(style="--order: 2") Help create a 3ZERO world by creating your own club.
      a(href="sign-up" style="--order: 3").orange_button.moved_down REGISTER NOW
  // }}}
  //- who we are{{{
  section#who_we_are.grid.two
    article.moved_left
      img(src="public/images/who_we_are.webp").shadow
    article.moved_right
      h3 Who We Are
      h2 Creating a World of Three Zeros
      #text_container
        p.
          The 3ZERO Club is an initiative towards achieving the Nobel Peace Laureate Professor Muhammad Yunus’s vision of creating a world of three zeros — 
          strong zero net carbon emission, zero wealth concentration for ending poverty, and zero unemployment by unleashing entrepreneurship in all.
      a Learn More
  // }}}
  //- latest{{{
  section#latest
    h3 Latest
    h2 Social Business and 3ZERO Club Events
    #latest_container.grid.three
      article(style="--order: 1").moved_down
        img(src="public/images/events_1.png.webp").shadow
        h3 Social Business Design Competition
        a(href="#") Coming Soon
      article(style="--order: 2").moved_down
        img(src="public/images/events_2.png.webp").shadow
        h3 Social Fiction Design Competition
        a(href="#") Coming Soon
      article(style="--order: 3").moved_down
        img(src="public/images/events_3.png.webp").shadow
        h3 Social Business Day
        a(href="https://eventee.co/en/e/social-business-day-2021-9171" target="_blank" rel="noopener noreferrer") Learn more
  // }}}
  //- call to action{{{
  section#call_to_action.grid.two
    article.moved_left
      h2 TAKE YOUR FIRST STEP TOWARDS CREATING
      h2 A WORLD OF THREE ZEROS

    //- a(href="" target="_blank" rel="noopener noreferrer").moved_right
    //-   h2 REGISTER NOW

    a(href="sign-up").moved_right.orange_button REGISTER NOW

  // }}}

